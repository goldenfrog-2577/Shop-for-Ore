{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "server:floating_text",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"scripts": {
				"animate": ["commands"]
			},
			"animations": {
				"commands": "controller.animation.commands"
			}
		},
		"component_groups": {
			"remove": {
				"minecraft:instant_despawn": {}
			},
			"off": {
				"minecraft:scale": {
					"value": 0.0
				},
				"minecraft:collision_box": {
					"width": 0.2,
					"height": 0.2
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": ["floating_text"]
			},
			"minecraft:health": {
				"value": 1,
				"max": 1,
				"min": 1
			},
			"minecraft:movement": {
				"value": 0
			},
			"minecraft:scale": {
				"value": 1.0
			},
			"minecraft:fire_immune": true,
			"minecraft:knockback_resistance": {
				"value": 1.0
			},
			"minecraft:collision_box": {
				"width": 0.4,
				"height": 0.4
			},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			},
			"minecraft:physics": {
				"has_collision": false,
				"has_gravity": false
			},
			"minecraft:water_movement": {
				"drag_factor": 0.0
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": false
				}
			},
			"minecraft:nameable": {
				"allowNameTagRenaming": true,
				"alwaysShow": true,
				"default_trigger": {
					"event": "off",
					"target": "self"
				}
			},
			"minecraft:interact": {
				"interactions": [{
					"on_interact": {
						"filters": {
							"all_of": [{
								"test": "is_family",
								"subject": "other",
								"value": "player"
							},
								{
									"test": "has_equipment",
									"domain": "hand",
									"subject": "other",
									"value": "server:admin_stick"
								},
								{
									"test": "has_tag",
									"subject": "other",
									"value": "host"
								}]
						},
						"event": "remove"
					},
					"play_sounds": "hurt",
					"interact_text": "button.deleteText",
					"particle_on_start": {
						"particle_type": "spit",
						"particle_y_offset": 0.3
					}
				}]
			}
		},
		"events": {
			"remove": {
				"add": {
					"component_groups": ["remove"]
				}
			},
			"off": {
				"add": {
					"component_groups": ["off"]
				}
			}
		}
	}
}
